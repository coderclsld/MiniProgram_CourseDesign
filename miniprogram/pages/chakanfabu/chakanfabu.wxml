<!--miniprogram/pages/chakanfabu/chakanfabu.wxml-->
<van-empty wx:if="{{ !goods || goods.length == 0 }}" description="暂无书籍" />
<block wx:if="{{listType == 1}}">
  <view class="list1" wx:for="{{goods}}" wx:key="id">
    <navigator url="/pages/goods-details/index?id={{item.id}}">
      <image class="img" mode="aspectFill" src="{{item}}"></image>
    </navigator>
    <view class="goods-info">
      <view class="title ellipsis">
        <navigator url="/pages/goods-details/index?id={{item.id}}">{{item.name}}</navigator>
      </view>
      <view class="price">¥ {{item.minPrice}}</view>
      <view class="buy-info">
        <view class="num">已售出{{item.numberSells}}件</view>
        <image class="car" src="/images/icon/car.svg" data-id="{{item.id}}" bindtap="addShopCar"></image>
      </view>
    </view>
  </view>
</block>