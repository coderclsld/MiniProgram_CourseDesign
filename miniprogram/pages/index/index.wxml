<!--pages/index/index.wxml-->
<view class="page">
  <view class="page-bottom">
    <view class="page-content">
      <view class="wc" wx:if="{{canIUse}}">
        <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
      </view>
      <view class="wc" wx:else>
        <i-row>
           <image src="{{avatarUrl}}" style="width:100rpx;height:100rpx;"></image>
           <view style="margin-left:10rpx"><text>{{nickName}}</text></view>
        </i-row>
      </view>
      <view class="wc">
        <text>聊天消息</text>
      </view>
      <view class="wc">
        <text>发布书籍</text>
      </view>
      <view class="wc">
        <text>查看发布</text>
      </view>
      <view class="wc">
        <text>帮助</text>
      </view>
    </view>
  </view>
  <i-sticky scrollTop="{{scrollTop}}">
    <button bindtap="aa" style="margin-top:50rpx;float:left;margin-left:-60px;margin-right:-60px;">test</button>
    <view>
      <view>
        <view class="weui-search-bar">
          <view class="weui-search-bar__form">
            <view class="weui-search-bar__box">
              <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
              <input type="text" class="weui-search-bar__input" placeholder="请输入搜索内容" />
            </view>
          </view>

        </view>
      </view>
    </view>
  </i-sticky>
  <view class="page-top {{open?'c-state1':''}}">

  </view>
</view>